@page
@model ProjetoBackEndInfnet.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Usuários";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="display-5">Usuários</h1>
        <a asp-page="Create" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-plus-circle"></i> Cadastrar Novo Usuário
        </a>
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover table-bordered align-middle mb-0">
            <thead class="table-light text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Users[0].Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Users[0].Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Users[0].Role)</th>
                    <th>Status</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr class="text-center">
                        <td class="text-start">@user.Name</td>
                        <td class="text-start">@user.Email</td>
                        <td>@user.Role</td>
                        <td>
                            @if (user.Active)
                            {
                                <span class="badge bg-success py-1 px-2 fs-7">
                                    <i class="bi bi-check-circle-fill me-1" style="font-size:1rem;"></i> Ativo
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary py-1 px-2 fs-7">
                                    <i class="bi bi-x-circle-fill me-1" style="font-size:1rem;"></i> Inativo
                                </span>
                            }
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm me-1">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-page="./Details" asp-route-id="@user.Id" class="btn btn-info btn-sm me-1 text-white">
                                <i class="bi bi-info-circle"></i> Detalhes
                            </a>
                            <a asp-page="./Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Excluir
                            </a>
                            <a asp-page="/Addresses/Index" asp-route-userId="@user.Id" class="btn btn-secondary btn-sm">
                                Endereços
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
