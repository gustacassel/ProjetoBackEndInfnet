@page
@model ProjetoBackEndInfnet.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Usuários";
}

<h1>Usuários</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Cadastrar Novo Usuário
    </a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Users[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.Users[0].Email)</th>
            <th>@Html.DisplayNameFor(model => model.Users[0].Role)</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Role</td>
                <td class="text-center">
                    @if (item.Active)
                    {
                        <i class="bi bi-check-circle-fill text-success fs-5"></i>
                    }
                    else
                    {
                        <i class="bi bi-x-circle-fill text-danger fs-5"></i>
                    }
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                        <i class="bi bi-info-circle"></i>
                    </a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
