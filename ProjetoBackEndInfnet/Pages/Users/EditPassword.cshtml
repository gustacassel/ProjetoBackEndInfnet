@page "{id:long}"
@model ProjetoBackEndInfnet.Pages.Users.EditPasswordModel

@{
    ViewData["Title"] = "Alterar Senha do Usuário";
}

<h1><i class="bi bi-key-fill"></i> Alterar Senha</h1>
<hr />

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <input type="hidden" asp-for="UserId" />

    <div class="mb-3">
        <label asp-for="PasswordChange.CurrentPassword" class="form-label">Senha Atual</label>
        <input asp-for="PasswordChange.CurrentPassword" type="password" class="form-control" />
        <span asp-validation-for="PasswordChange.CurrentPassword" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PasswordChange.NewPassword" class="form-label">Nova Senha</label>
        <input asp-for="PasswordChange.NewPassword" type="password" class="form-control" />
        <span asp-validation-for="PasswordChange.NewPassword" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PasswordChange.ConfirmPassword" class="form-label">Confirme a Nova Senha</label>
        <input asp-for="PasswordChange.ConfirmPassword" type="password" class="form-control" />
        <span asp-validation-for="PasswordChange.ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="d-flex">
        <button type="submit" class="btn btn-primary me-2">
            <i class="bi bi-save"></i> Salvar Senha
        </button>
        <a asp-page="./Edit" asp-route-id="@Model.UserId" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Voltar
        </a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}