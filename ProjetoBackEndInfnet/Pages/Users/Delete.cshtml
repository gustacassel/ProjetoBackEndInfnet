@page
@model ProjetoBackEndInfnet.Pages.Users.DeleteModel

@{
    ViewData["Title"] = "Excluir Usuário";
}

<h1>Excluir Usuário</h1>

<h3>Tem certeza que deseja excluir este usuário?</h3>

<dl class="row">
    <dt class="col-sm-2">Nome</dt>
    <dd class="col-sm-10">@Model.User.Name</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.User.Email</dd>

    <dt class="col-sm-2">Perfil</dt>
    <dd class="col-sm-10">@Model.User.Role</dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="User.Id" />
    <input type="submit" value="Excluir" class="btn btn-danger" />
    <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
</form>
