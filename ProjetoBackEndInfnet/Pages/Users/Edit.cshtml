@page
@model ProjetoBackEndInfnet.Pages.Users.EditModel

@{
    ViewData["Title"] = "Editar Usuário";
}

<div class="container mt-4">
    <h1 class="display-5">Editar Usuário</h1>
    <p class="text-muted">Atualize as informações do usuário conforme necessário.</p>
    <hr />

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="User.Id" />

                <div class="mb-3">
                    <label asp-for="User.Name" class="form-label"></label>
                    <input asp-for="User.Name" class="form-control" placeholder="Digite o nome completo" />
                    <span asp-validation-for="User.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="User.Email" class="form-label"></label>
                    <input asp-for="User.Email" class="form-control" placeholder="Digite o e-mail" />
                    <span asp-validation-for="User.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="User.Role" class="form-label"></label>
                    <select asp-for="User.Role" class="form-control">
                        <option value="User">Usuário</option>
                        <option value="Admin">Administrador</option>
                    </select>
                    <span asp-validation-for="User.Role" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="User.Active" class="form-check-input" id="activeCheck" />
                    <label class="form-check-label" for="activeCheck">
                        @Html.DisplayNameFor(model => model.User.Active)
                    </label>
                </div>

                <div class="d-flex">
                    <a asp-page="./EditPassword" asp-route-id="@Model.User.Id" class="btn btn-dark me-2">
                        <i class="bi bi-key-fill"></i> Alterar Senha
                    </a>
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-save"></i> Salvar
                    </button>
                    <a asp-page="./Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Voltar à Lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
