@page
@using ProjetoBackEndInfnet.Models
@model ProjetoBackEndInfnet.Pages.Orders.IndexModel

@{
    ViewData["Title"] = "Pedidos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="display-5"><i class="bi bi-bag-check"></i> Lista de Pedidos</h1>
        <a asp-page="Create" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-plus-circle"></i> Novo Pedido
        </a>
    </div>

    <div class="row">
        @foreach (var order in Model.Orders)
        {
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>Pedido #@order.Id</span>
                        <span class="badge @(order.Status == Order.STATUS_COMPLETED ? "bg-success"
                                                            : order.Status == Order.STATUS_CANCELED ? "bg-danger" : "bg-warning")">
                        @order.Status
                    </span>
                </div>
                <div class="card-body">
                    <p><strong>Cliente:</strong> @order.User?.Name</p>
                    <p><strong>Endereço:</strong> @order.Address?.Street, @order.Address?.Number - @order.Address?.Neighborhood</p>
                    <p><strong>Cidade/Estado:</strong> @order.Address?.City / @order.Address?.State</p>
                    <p><strong>Itens:</strong></p>
                    <ul>
                        @foreach (var item in order.OrderItems)
                            {
                                <li>@item.Product?.Description - @item.Quantity x @item.UnitPrice.ToString("C2")</li>
                            }
                        </ul>
                        <p><strong>Total:</strong> @order.GetTotalAmount().ToString("C2")</p>
                        @if (order.Payment != null)
                        {
                            <p><strong>Pagamento:</strong> @order.Payment.PaymentMethod - @order.Payment.PaymentDate</p>
                        }
                    </div>
                    <div class="card-footer d-flex justify-content-end gap-2">
                        <a asp-page="./Details" asp-route-id="@order.Id" class="btn btn-info btn-sm text-white">
                            <i class="bi bi-info-circle"></i> Detalhes
                        </a>
                        <a asp-page="./Edit" asp-route-id="@order.Id" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-page="./Delete" asp-route-id="@order.Id" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Excluir
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>