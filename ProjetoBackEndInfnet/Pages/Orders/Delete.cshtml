@page "{id:long}"
@using ProjetoBackEndInfnet.Models
@model ProjetoBackEndInfnet.Pages.Orders.DeleteModel
@{
    ViewData["Title"] = "Excluir Pedido";
}

<div class="container mt-4">
    <h1 class="display-5 text-danger"><i class="bi bi-trash"></i> Excluir Pedido</h1>
    <p class="text-muted">Tem certeza que deseja excluir este pedido? Esta ação não pode ser desfeita.</p>
    <hr />

    @if (Model.Order != null)
    {
        <div class="card bg-light mb-3">
            <div class="card-body">
                <h5 class="card-title">Pedido #@Model.Order.Id</h5>
                <p class="card-text">
                    <strong>Usuário:</strong> @Model.Order.User.Name <br />
                    <strong>Endereço:</strong> @Model.Order.Address.Street, @Model.Order.Address.City <br />
                    <strong>Status:</strong> @Model.Order.Status <br />
                    <strong>Data do Pedido:</strong> @Model.Order.OrderDate.ToString("dd/MM/yyyy HH:mm")
                </p>
            </div>
        </div>

        <form method="post">
            <input type="hidden" asp-for="Order.Id" />
            <div class="d-flex">
                <button type="submit" class="btn btn-danger me-2">
                    <i class="bi bi-trash"></i> Excluir
                </button>
                <a asp-page="./Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Cancelar
                </a>
            </div>
        </form>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            Pedido não encontrado.
        </div>
    }
</div>