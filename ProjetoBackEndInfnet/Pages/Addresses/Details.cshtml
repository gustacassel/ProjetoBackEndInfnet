@page
@model ProjetoBackEndInfnet.Pages.Addresses.DetailsModel

@{
    ViewData["Title"] = "Detalhes do Endereço";
}

<div class="container mt-4">
    <h1 class="display-5">Detalhes do Endereço</h1>
    <p class="text-muted">Visualize as informações completas deste endereço.</p>
    <hr />

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Address!.UserId)</dt>
                <dd class="col-sm-9">@Model.UserName</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Address!.Street)</dt>
                <dd class="col-sm-9">@Model.Address!.Street</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Address!.Number)</dt>
                <dd class="col-sm-9">@Model.Address!.Number</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Address!.Neighborhood)</dt>
                <dd class="col-sm-9">@Model.Address!.Neighborhood</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Address!.City)</dt>
                <dd class="col-sm-9">@Model.Address!.City</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Address!.State)</dt>
                <dd class="col-sm-9">@Model.Address!.State</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Address!.ZipCode)</dt>
                <dd class="col-sm-9">@Model.Address!.ZipCode</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Address!.Active)</dt>
                <dd class="col-sm-9">
                    @if (Model.Address!.Active)
                    {
                        <span class="badge bg-success">Ativo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inativo</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="d-flex">
        <a asp-page="./Edit" asp-route-id="@Model.Address.Id" class="btn btn-warning me-2">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
        <a asp-page="./Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Voltar à Lista
        </a>
    </div>
</div>
