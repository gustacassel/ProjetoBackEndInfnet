@page "{orderId:long}"
@using ProjetoBackEndInfnet.Models
@model ProjetoBackEndInfnet.Pages.OrderItems.IndexModel
@{
    ViewData["Title"] = "Itens do Pedido";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="display-5">Itens do Pedido #@Model.OrderId</h1>
        <a asp-page="Create" asp-route-orderId="@Model.OrderId" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Adicionar Item
        </a>
    </div>
    <hr />

    @if (Model.OrderItems.Any())
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Produto</th>
                    <th>Preço Unitário</th>
                    <th>Quantidade</th>
                    <th>Subtotal</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderItems)
                {
                    <tr>
                        <td>@item.Product?.Description</td>
                        <td>@item.UnitPrice.ToString("C2")</td>
                        <td>@item.Quantity</td>
                        <td>@((item.UnitPrice * item.Quantity).ToString("C2"))</td>
                        <td>
                            <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info me-2">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger me-2">
                                <i class="bi bi-trash"></i> Excluir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            Este pedido não tem itens.
        </div>
    }

    <a asp-page="../Orders/Index" class="btn btn-secondary mt-3">
        <i class="bi bi-arrow-left-circle"></i> Voltar aos Pedidos
    </a>
</div>