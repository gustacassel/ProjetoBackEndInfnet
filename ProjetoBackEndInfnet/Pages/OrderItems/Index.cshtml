@page
@model ProjetoBackEndInfnet.Pages.OrderItems.IndexModel
@{
    ViewData["Title"] = "Itens do Pedido";
}

<div class="container mt-4">
    <h1 class="display-5"><i class="bi bi-basket"></i> Itens do Pedido #@Model.Order!.Id</h1>
    <p class="text-muted">Gerencie os itens vinculados a este pedido.</p>
    <hr />

    <div class="mb-3">
        <a asp-page="./Create" asp-route-orderId="@Model.Order.Id" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Adicionar Item
        </a>
        <a asp-page="../Orders/Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left-circle"></i> Voltar
        </a>
    </div>

    @if (Model.Order.OrderItems.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Produto</th>
                    <th>Quantidade</th>
                    <th>Preço Unitário</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Order.OrderItems)
                {
                    <tr>
                        <td>@item.Product?.Description</td>
                        <td>@item.Quantity</td>
                        <td>@item.UnitPrice.ToString("C2")</td>
                        <td>@((item.UnitPrice* item.Quantity).ToString("C2"))</td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ms-1">
                                <i class="bi bi-trash"></i> Excluir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Nenhum item adicionado ainda.
        </div>
    }
</div>
