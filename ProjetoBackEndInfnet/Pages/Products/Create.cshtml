@page
@model ProjetoBackEndInfnet.Pages.Products.CreateModel

@{
    ViewData["Title"] = "Criar Produto";
}

<div class="container mt-4">
    <div class="mb-4">
        <h1 class="display-5">Cadastrar Novo Produto</h1>
        <p class="text-muted">Preencha os dados abaixo para adicionar um novo produto ao sistema.</p>
        <hr />
    </div>

    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Product.Description" class="form-label"></label>
                    <input asp-for="Product.Description" class="form-control" placeholder="Digite a descrição do produto" />
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Product.Price" class="form-label"></label>
                    <input asp-for="Product.Price" class="form-control" type="number" step="0.01" placeholder="Ex: 899,00" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Product.MeasureUnit" class="form-label"></label>
                    <input asp-for="Product.MeasureUnit" class="form-control" placeholder="Ex: unidade, kg, litro" />
                    <span asp-validation-for="Product.MeasureUnit" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Product.QuantityInStock" class="form-label"></label>
                    <input asp-for="Product.QuantityInStock" class="form-control" type="number" placeholder="Quantidade em estoque" />
                    <span asp-validation-for="Product.QuantityInStock" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Product.Active" id="activeCheck" />
                    <label class="form-check-label" for="activeCheck">
                        @Html.DisplayNameFor(model => model.Product.Active)
                    </label>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Cadastrar
                    </button>
                    <a asp-page="Index" class="btn btn-secondary ms-2">Voltar à Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}