@page
@model ProjetoBackEndInfnet.Pages.Products.EditModel

@{
    ViewData["Title"] = "Editar Produto";
}

<div class="container mt-4">
    <h1 class="display-5">Editar Produto</h1>
    <p class="text-muted">Atualize as informações do produto conforme necessário.</p>
    <hr />

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Product.Id" />

                <div class="mb-3">
                    <label asp-for="Product.Description" class="form-label"></label>
                    <input asp-for="Product.Description" class="form-control" />
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Product.Price" class="form-label"></label>
                    <input asp-for="Product.Price" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Product.MeasureUnit" class="form-label"></label>
                    <input asp-for="Product.MeasureUnit" class="form-control" />
                    <span asp-validation-for="Product.MeasureUnit" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Product.QuantityInStock" class="form-label"></label>
                    <input asp-for="Product.QuantityInStock" class="form-control" type="number" />
                    <span asp-validation-for="Product.QuantityInStock" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Product.Active" />
                    <label class="form-check-label">
                        @Html.DisplayNameFor(model => model.Product.Active)
                    </label>
                </div>

                <div class="d-flex">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-save"></i> Salvar
                    </button>
                    <a asp-page="./Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Voltar à Lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}