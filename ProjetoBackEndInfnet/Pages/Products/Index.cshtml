@page
@model ProjetoBackEndInfnet.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Lista de Produtos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="display-5">Lista de Produtos</h1>
        <a asp-page="Create" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-plus-circle"></i> Cadastrar Novo Produto
        </a>
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover table-bordered align-middle mb-0">
            <thead class="table-light text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Products[0].Description)</th>
                    <th>@Html.DisplayNameFor(model => model.Products[0].Price)</th>
                    <th>@Html.DisplayNameFor(model => model.Products[0].MeasureUnit)</th>
                    <th>@Html.DisplayNameFor(model => model.Products[0].QuantityInStock)</th>
                    <th>@Html.DisplayNameFor(model => model.Products[0].Active)</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Products)
                {
                    <tr class="text-center">
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@item.Price.ToString("C2")</td>
                        <td>@item.MeasureUnit</td>
                        <td>@item.QuantityInStock</td>
                        <td>
                            @if (item.Active)
                            {
                                <span class="badge bg-success py-1 px-2 fs-7">
                                    <i class="bi bi-check-circle-fill me-1" style="font-size:1rem;"></i> Ativo
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary py-1 px-2 fs-7">
                                    <i class="bi bi-x-circle-fill me-1" style="font-size:1rem;"></i> Inativo
                                </span>
                            }
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1 text-white">
                                <i class="bi bi-info-circle"></i> Detalhes
                            </a>
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Excluir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>